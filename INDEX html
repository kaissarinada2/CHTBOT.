            border-bottom: 1px solid #2d333f;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        #chat-container {
            flex: 1;
            overflow-y: auto;
            padding: 2rem;
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .msg {
            max-width: 80%;
            padding: 1rem;
            border-radius: 12px;
            line-height: 1.5;
            font-size: 0.95rem;
        }

