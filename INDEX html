<body>

<div id="chat-container">
    <header>
        <div class="model-info">
            <h2>Trinity Large Preview</h2>
            <span>400B MoE • Context 128k • Arcee-AI</span>
        </div>
        <div id="status">Online</div>
    </header>

    <div id="chat-feed">
        <div class="bubble bot">Système Arcee initialisé. Je suis Trinity, prêt pour vos récits les plus complexes ou vos besoins en agentique.</div>
    </div>

    <div id="input-area">
        <div id="loading" class="loader">Analyse de la requête par Trinity...</div>
        <div class="input-group">
            <textarea id="userInput" rows="1" placeholder="Entrez un prompt complexe ou commencez une histoire..."></textarea>
            <button onclick="callTrinity()">Envoyer</button>
        </div>
    </div>
</div>

<script>
    const md = window.markdownit();
    const chatFeed = document.getElementById('chat-feed');
    const userInput = document.getElementById('userInput');
    const loader = document.getElementById('loading');

    // CONFIGURATION OPENROUTER
    const API_KEY = "VOTRE_CLE_ICI"; 
    const MODEL_ID = "arcee-ai/trinity-large-preview:free";

    async function callTrinity() {
        const text = userInput.value.trim();
        if(!text) return;

        // UI : Ajouter message utilisateur
        appendMessage(text, 'user');
        userInput.value = '';
        loader.style.display = 'block';

        try {
            const response = await fetch("https://openrouter.ai/api/v1/chat/completions", {
                method: "POST",
                headers: {
                    "Authorization": `Bearer ${API_KEY}`,
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({
                    "model": MODEL_ID,
                    "messages": [{"role": "user", "content": text}],
                    "temperature": 0.8 // Idéal pour le côté créatif de Trinity
                })
            });

            const data = await response.json();
            const botMessage = data.choices[0].message.content;
            
            appendMessage(botMessage, 'bot');
        } catch (error) {
            appendMessage("Erreur : Impossible de joindre Trinity. Vérifiez votre clé API.", 'bot');
        } finally {
            loader.style.display = 'none';
        }
    }

    function appendMessage(content, side) {
        const div = document.createElement('div');
        div.className = `bubble ${side}`;
        // Rendu Markdown pour supporter le code et le gras
        div.innerHTML = md.render(content);
        chatFeed.appendChild(div);
        chatFeed.scrollTop = chatFeed.scrollHeight;
    }

    // Auto-resize du champ texte
    userInput.addEventListener('input', function() {
        this.style.height = 'auto';
        this.style.height = (this.scrollHeight) + 'px';
    });

    // Entrée pour envoyer
    userInput.addEventListener('keypress', e => {
        if(e.key === 'Enter' && !e.shiftKey) {
            e.preventDefault();
            callTrinity();
        }
    });
</script>

</body>
