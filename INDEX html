<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chatbot Trinity-Large-Preview</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .chat-container { height: 70vh; }
        .user-msg { background-color: #3b82f6; color: white; align-self: flex-end; }
        .bot-msg { background-color: #f3f4f6; color: #1f2937; align-self: flex-start; }
    </style>
</head>
<body class="bg-gray-100 h-screen flex flex-col items-center justify-center p-4">

    <div class="w-full max-w-2xl bg-white rounded-lg shadow-xl flex flex-col overflow-hidden">
        <div class="bg-indigo-600 p-4 text-white text-center font-bold text-xl">
            Arcee Trinity Chatbot
        </div>

        <div id="chat-box" class="chat-container overflow-y-auto p-4 flex flex-col gap-4">
            <div class="bot-msg p-3 rounded-lg max-w-[80%]">
                Bonjour ! Je suis Trinity-Large-Preview. Comment puis-je vous aider aujourd'hui ?
            </div>
        </div>

        <div class="border-t p-4 flex gap-2">
            <input type="text" id="user-input" placeholder="Écrivez votre message..." 
                   class="flex-1 border rounded-full px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500">
            <button onclick="sendMessage()" id="send-btn" 
                    class="bg-indigo-600 text-white px-6 py-2 rounded-full hover:bg-indigo-700 transition">
                Envoyer
            </button>
        </div>
    </div>

    <script>
        const API_KEY = "VOTRE_CLE_API_OPENROUTER"; // <--- METTEZ VOTRE CLÉ ICI
        const MODEL = "arcee-ai/trinity-large-preview:free";
        const chatBox = document.getElementById('chat-box');
        const userInput = document.getElementById('user-input');

        // Gérer l'envoi via la touche Entrée
        userInput.addEventListener("keypress", (e) => {
            if (e.key === "Enter") sendMessage();
        });

        async function sendMessage() {
            const text = userInput.value.trim();
            if (!text) return;

            // Afficher le message utilisateur
            appendMessage(text, 'user-msg');
            userInput.value = '';

            // Afficher un indicateur de chargement
            const loadingId = "loading-" + Date.now();
            appendMessage("En train de réfléchir...", 'bot-msg', loadingId);

            try {
                const response = await fetch("https://openrouter.ai/api/v1/chat/completions", {
                    method: "POST",
                    headers: {
                        "Authorization": `Bearer ${API_KEY}`,
                        "HTTP-Referer": window.location.href, // Requis par OpenRouter
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({
                        "model": MODEL,
                        "messages": [
                            {"role": "user", "content": text}
                        ]
                    })
                });

                const data = await response.json();
                const botReply = data.choices[0].message.content;

                // Supprimer le chargement et afficher la réponse
                document.getElementById(loadingId).remove();
                appendMessage(botReply, 'bot-msg');

            } catch (error) {
                console.error("Erreur:", error);
                document.getElementById(loadingId).innerText = "Erreur de connexion à l'API.";
            }
        }

        function appendMessage(text, className, id = null) {
            const div = document.createElement('div');
            if(id) div.id = id;
            div.className = `${className} p-3 rounded-lg max-w-[80%] whitespace-pre-wrap`;
            div.innerText = text;
            chatBox.appendChild(div);
            chatBox.scrollTop = chatBox.scrollHeight;
        }
    </script>
</body>
</html>
