<div id="wait">Trinity analyse la requête...</div>

<footer>
    <div class="input-box">
        <textarea id="userInput" rows="1" placeholder="Posez votre question..."></textarea>
        <button id="sendBtn" onclick="askAI()">Envoyer</button>
    </div>
</footer>

<script>
    // --- ÉTAPE CRUCIALE ---
    // REMPLACEZ 'VOTRE_CLE' PAR VOTRE VRAIE CLÉ OPENROUTER (sk-or-v1-...)
    const API_KEY = "VOTRE_CLE_ICI"; 
    
    let history = [];

    async function askAI() {
        const input = document.getElementById('userInput');
        const btn = document.getElementById('sendBtn');
        const wait = document.getElementById('wait');
        const text = input.value.trim();

        if (!text) return;
        if (API_KEY === "VOTRE_CLE_ICI") {
            alert("Erreur : Vous n'avez pas encore inséré votre clé API dans le code !");
            return;
        }

        // 1. Mise à jour Interface
        addMessage(text, 'user');
        input.value = '';
        btn.disabled = true;
        wait.style.display = 'block';

        // 2. Mise à jour Historique
        history.push({ role: "user", content: text });

        try {
            //             const response = await fetch("https://openrouter.ai/api/v1/chat/completions", {
                method: "POST",
                headers: {
                    "Authorization": `Bearer ${API_KEY}`,
                    "Content-Type": "application/json",
                    "HTTP-Referer": "http://localhost", // Aide à éviter les blocages
                    "X-Title": "Trinity Interface"
                },
                body: JSON.stringify({
                    "model": "arcee-ai/trinity-large-preview:free",
                    "messages": history,
                    "temperature": 0.7
                })
            });

            const data = await response.json();
            
            if (data.choices && data.choices[0]) {
                const reply = data.choices[0].message.content;
                addMessage(reply, 'bot');
                history.push({ role: "assistant", content: reply });
            } else if (data.error) {
                addMessage("Erreur API : " + data.error.message, 'bot');
            } else {
                addMessage("Réponse inattendue d'OpenRouter.", 'bot');
            }

        } catch (err) {
            addMessage("Erreur de connexion : Impossible de joindre le serveur. Si vous utilisez un fichier local, essayez d'utiliser une extension 'Live Server'.", 'bot');
            console.error("Détails de l'erreur :", err);
        } finally {
            btn.disabled = false;
            wait.style.display = 'none';
        }
    }

    function addMessage(text, type) {
        const container = document.getElementById('chat-container');
        const div = document.createElement('div');
        div.className = `msg ${type}`;
        div.innerText = text;
        container.appendChild(div);
        container.scrollTop = container.scrollHeight;
    }

    document.getElementById('userInput').addEventListener('keydown', (e) => {
        if (e.key === 'Enter' && !e.shiftKey) {
            e.preventDefault();
            askAI();
        }
    });
</script>

