            Powered by Arcee & OpenRouter
        </div>
    </header>

    <!-- Configuration de la clé API -->
    <div class="config-bar">
        <i class="fas fa-key" style="color: var(--text-secondary);"></i>
        <input type="password" id="api-key" class="api-input" placeholder="Collez votre clé OpenRouter ici (sk-or-...)">
    </div>

    <!-- Fenêtre de Chat -->
    <div id="chat-window">
        <div class="message bot-message">
            Bonjour ! Je suis connecté au modèle <strong>Trinity-Large-Preview</strong>. 
            Veuillez entrer votre clé API ci-dessus pour commencer la conversation.
        </div>
    </div>

    <!-- Indicateur de frappe -->
    <div class="loading" id="loading-indicator">
        <span>Trinity réfléchit</span>
        <div class="dots"><span>.</span><span>.</span><span>.</span></div>
    </div>

    <!-- Zone de texte -->
    <div class="input-area">
        <textarea id="user-input" placeholder="Posez une question à Trinity..." rows="1"></textarea>
        <button class="send-btn" id="send-btn" onclick="sendMessage()">
            <i class="fas fa-paper-plane"></i>
        </button>
    </div>
</div>

<script>
    const chatWindow = document.getElementById('chat-window');
    const userInput = document.getElementById('user-input');
    const sendBtn = document.getElementById('send-btn');
    const apiKeyInput = document.getElementById('api-key');
    const loadingIndicator = document.getElementById('loading-indicator');

    // Historique de conversation pour le contexte
    let conversationHistory = [];

    // URL de l'API et Modèle Spécifique
    const API_URL = "https://openrouter.ai/api/v1/chat/completions";
    const MODEL_ID = "arcee-ai/trinity-large-preview:free";

    // Gestion de la hauteur du textarea
    userInput.addEventListener('input', function() {
        this.style.height = 'auto';
        this.style.height = (this.scrollHeight) + 'px';
        if(this.value === '') this.style.height = '50px';
    });

    // Envoi avec Entrée (Shift+Entrée pour saut de ligne)
    userInput.addEventListener('keydown', function(e) {
        if (e.key === 'Enter' && !e.shiftKey) {
            e.preventDefault();
            sendMessage();
        }
    });

    async function sendMessage() {
        const text = userInput.value.trim();
        const apiKey = apiKeyInput.value.trim();

        if (!text) return;

        if (!apiKey) {
            appendMessage("⚠️ Veuillez entrer une clé API OpenRouter valide dans le champ en haut.", "bot-message");
            return;
        }

        // 1. Ajouter le message utilisateur à l'UI
        appendMessage(text, 'user-message');
        userInput.value = '';
        userInput.style.height = '50px';
        
        // 2. Préparer l'historique
        conversationHistory.push({ role: "user", content: text });

        // 3. UI Loading
        loadingIndicator.style.display = 'flex';
        sendBtn.disabled = true;
        chatWindow.scrollTop = chatWindow.scrollHeight;

        try {
            // 4. Appel API Réel
            const response = await fetch(API_URL, {
                method: "POST",
                headers: {
                    "Authorization": `Bearer ${apiKey}`,
                    "Content-Type": "application/json",
                    "HTTP-Referer": window.location.href,
                    "X-Title": "Trinity Chatbot Interface"
                },
                body: JSON.stringify({
                    "model": MODEL_ID,
                    "messages": conversationHistory,
                    "temperature": 0.7,
                    "max_tokens": 1000
                })
            });

            if (!response.ok) {
                const errorData = await response.json();
                throw new Error(errorData.error?.message || "Erreur de connexion API");
            }

            const data = await response.json();
            const botContent = data.choices[0].message.content;

            // 5. Ajouter la réponse du bot
            conversationHistory.push({ role: "assistant", content: botContent });
            appendMessage(formatText(botContent), 'bot-message');

        } catch (error) {
            console.error(error);
            appendMessage(`❌ Erreur: ${error.message}`, "bot-message");
            // Retirer le dernier message utilisateur de l'historique en cas d'erreur pour ne pas bloquer
            conversationHistory.pop(); 
        } finally {
            loadingIndicator.style.display = 'none';
            sendBtn.disabled = false;
            chatWindow.scrollTop = chatWindow.scrollHeight;
        }
    }

    function appendMessage(htmlContent, className) {
        const div = document.createElement('div');
        div.classList.add('message', className);
        div.innerHTML = htmlContent; // Utilisation de innerHTML pour le formatage simple
        chatWindow.appendChild(div);
        chatWindow.scrollTop = chatWindow.scrollHeight;
    }

    // Fonction utilitaire simple pour formater les sauts de ligne et le code
    function formatText(text) {
        // Échapper le HTML basique pour éviter les injections XSS
        let safeText = text.replace(/&/g, "&amp;").replace(/</g, "&lt;").replace(/>/g, "&gt;");
        
        // Convertir les blocs de code markdown ```...```
        safeText = safeText.replace(/```([\s\S]*?)```/g, '<pre><code>$1</code></pre>');
        
        // Convertir les sauts de ligne en <br>
        return safeText.replace(/\n/g, '<br>');
    }
</script>

</body>
</html>
